<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/mimo_reward_iv_volume_button"
        android:layout_width="@dimen/video_volume_size"
        android:layout_height="@dimen/video_volume_size"
        android:layout_gravity="top|right"
        android:layout_marginTop="@dimen/video_volume_buttom_top_margin"
        android:layout_marginEnd="@dimen/video_volume_buttom_right_margin"
        android:background="@null"
        android:src="@drawable/video_volume_button_image"
        android:visibility="visible" />

    <TextView
        android:id="@+id/mimo_reward_tv_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/video_count_down_text_left_margin"
        android:layout_marginTop="@dimen/video_count_down_text_top_margin"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

</merge>